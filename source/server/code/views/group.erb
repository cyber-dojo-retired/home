<script>
'use strict';
$(() => {

  const groupId = "<%= @group_id %>";

  $('.enter.button').click(() => {
    const json = JSON.stringify({"id":groupId});
    $.post(`/home/enter.json`, json, (response) => {
      window.location = response.route;
    });
  });

  $('.reenter.button').click(() => {
    window.location = `/home/reenter?id=${encodeURIComponent(groupId)}`;
  });

  $('.dashboard.button').click(() => {
    window.location = `/dashboard/show/${encodeURIComponent(groupId)}`;
  });

});
</script>

<div id="group-page">
  <table class="edged-panel">
    <tr>
      <td class="lhs-column">
        <img src="/avatars/image/all" class="avatars"/>
      </td>
      <td class="rhs-column">
        <div class="group-id"><%= @group_id %></div>
        <div class="enter button">enter the exercise</div>
        <div class="reenter button">re-enter the exercise</div>
        <div class="dashboard button">open exercise dashboard</div>
      </td>
    </tr>
  </table>
</div>
