<script>
'use strict';
$(() => {

  const kataId = "<%= @manifest['id'] %>";

  $('.ok.button').click(() => {
    window.open(`/kata/edit/${kataId}`);
    window.location.href = '/home/index';
  });

});
</script>

<%
  group_id = @manifest['group_id']
  individual_id = @manifest['id']
  exercise_name = @manifest['display_name']
  if @manifest.has_key?('exercise')
    exercise_name += ", " + @manifest['exercise']
  end
%>

<%= erb :'background' %>

<div id="avatar-page">
  <div class="box">

    <table>
      <tr>
        <td>
          <table>
            <% 2.times do %>
            <tr>
              <% 2.times do %>
              <td>
                <img class="large avatar" src="/avatars/image/<%= @index %>"/>
              </td>
              <% end %>
            </tr>
            <% end %>
          </table>
        </td>
        <td>
          <div class="group-id"><%= group_id %></div>
          <%= exercise_name %><br/>
          your individual id is <%= individual_id %><br/>
          your avatar is the <%= @name %><br/>
          <div class="ok button">ok</div>
        </td>
      </tr>
    </table>

  </div>
</div>
